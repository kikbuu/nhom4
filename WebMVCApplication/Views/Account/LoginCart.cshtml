@model WebMVCApplication.ServiceReferenceShopBanGiayPro.user

@{
    ViewBag.Title = "Đăng nhập giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-left-shopping">
    <p>Mời bạn đăng nhập để mua hàng!</p>
    @using (Html.BeginForm("LoginCart", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        if(@ViewBag.Message != null)
        {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }
        <table class="content-right-login-table">
            <tr>
                <td style="color: red; font-size: 20px; font-family: 'Times New Roman';" colspan="2">ĐĂNG NHẬP</td>
            </tr>
            <tr></tr>
            <tr></tr>
            <tr>
                <td>@Html.Label("UserName: ")</td>
                <td>@Html.TextBoxFor(a => a.username)</td>
                <td style="color: red">@Html.ValidationMessageFor(a => a.username)</td>
            </tr>
            <tr>
                <td>@Html.Label("Password: ")</td>
                <td>@Html.PasswordFor(a => a.password)</td>
                <td style="color: red">@Html.ValidationMessageFor(a => a.password)</td>
            </tr>
            <tr>
                <td></td>
                <td colspan="2"><input type="submit" value="Đăng nhập" /><input type="reset" value="Nhập lại" /></td>
            </tr>
        </table>
    }
</div>
